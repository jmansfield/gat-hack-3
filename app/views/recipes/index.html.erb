<h1>Recipes</h1>
  <hr/>
<% @recipes.each do |recipe| %>
  <%= recipe.picture %>
  <h2><%= link_to recipe.title, recipe %></h2>
  <p><%= recipe.ingredients %></p>
  <p><%= link_to 'Edit', edit_recipe_path(recipe) %> | <%= link_to 'Delete', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></p>
  <hr/>
<% end %>

<br>

<%= link_to 'New Recipe', new_recipe_path, :class => "button" %>
